<h3><%= @post.title %></h3>
<h5><%= @post.user.full_name %></h5>

<p><%= @post.body %></p>

<div id="comments">
  <%= render "comments/comments" %>
</div>

<% if current_user %>
  <div id="new_comment">
    <h3><%= render 'comments/add_comment' %></h3>
  </div>
<% else %>
  <%= link_to 'Sign Up to Add a Comment', new_user_registration_path %>
<% end %>
