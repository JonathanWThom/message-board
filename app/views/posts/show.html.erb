<h1 class="text-center"><%= @post.title %></h3>
<h5 class="text-center"><%= @post.user.full_name %></h5>
<hr>
<p class="text-center"><%= @post.body %></p>
<hr>

<div id="comments">
  <%= render "comments/comments" %>
</div>

<% if current_user %>
  <div id="new_comment">
    <h3><%= render 'comments/add_comment' %></h3>
  </div>
<% else %>
  <h3 class="text-center"><%= link_to 'Sign Up to Add a Comment', new_user_registration_path %></h3>
<% end %>
